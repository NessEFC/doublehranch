<div>
  <%= form_tag users_import_path, multipart: true do %>
    <h4>Import users</h4>
<div>
  <div>
    <span>
      <span>
        <i class="fa fa-cloud-upload"></i> Select file&hellip;
        <input type="file" multiple>
        <%= file_field_tag :file %>
      </span>
    </span>
    <input type="text" class="form-control" readonly>
  </div>
  <span class="help-block">
    Be sure csv is in correct format.
  </span>
</div>

<div class="col-md-3">
  <span>
    <%= submit_tag "Upload",
                   class: "btn btn-default form-group",
                   style: "margin: 0em",
                   name: nil %>
  </span>
</div>
  <% end %>
</div>

